@{
    ViewData["Title"] = "Home Page";
}
@{
    IEnumerable<string> listCurso = new List<string> { "POO", "TDW", "MAT3", "FIS1" };
}

<div class="text-center">
    <h1 class="display-4">Helpers</h1>
</div>

<form class="">
    <div class="form-group row">
        <label for="userName" class="col-sm-2 col-form-label">Nombre de Usuario</label>
        <div class="col-sm-5">
            @Html.TextBox("txtUserName","",new {@class="form-control"})
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Contraseña</label>
        <div class="col-sm-5">
            @Html.Password("Contraseña","",new{@class="form-control"})
        </div>
    </div>
    <div>
        <label for="genero" class="col-sm-2 col-form-label">Genero</label>
        <div class="form-check form-check-inline">
            @Html.RadioButton("Genero", "Masculino", true, new{id="masculino"})
            <label class="form-check-label" for="inlineCheckbox1">Masculino</label>
        </div>

        <div class="form-check form-check-inline">
            @Html.RadioButton("Genero", "Femenino", false, new{id="femenino"})
            <label class="form-check-label" for="inlineCheckbox2">Femenino</label>
        </div>
    </div>
    <div class="form-group row">
        <label for="direccion" class="col-sm-2 col-form-label">Dirección</label>
        <div class="col-sm-5">
            @Html.TextArea("txtDireccion","",new {@class="form-control"})
        </div>
    </div>
    <div>
        <label for="pasatiempo" class="col-sm-2 col-form-label">Pasatiempo</label>
        <div class="form-check form-check-inline">
            @Html.CheckBox("Correr")
            <label class="form-check-label" for="inlineCheckbox1">Correr</label>
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBox("Bailar")
            <label class="form-check-label" for="inlineCheckbox2">Bailar</label>
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBox("Escalar")
            <label class="form-check-label" for="inlineCheckbox3">Escalar</label>
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBox("Peliculas")
            <label class="form-check-label" for="inlineCheckbox4">Peliculas</label>
        </div>
    </div>
    <div>
        <div class="form-group row">
            <label for="Curso" class="col-sm-2 col-form-label">Curso</label>
            <div class="col-sm-5">
                @Html.DropDownList("Lista", new SelectList(listCurso, listCurso.FirstOrDefault()), "-- Selecionar Curso --")
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="conocimientos" class="col-sm-2 col-form-label">Conocimientos</label>
        <div class="col-sm-5">
            @Html.ListBox("Seleccionar Habilidades", new List<SelectListItem>{
                new SelectListItem{Text="C#",Value="1"},
                new SelectListItem{Text="ASP.NET",Value="2"},
                new SelectListItem{Text="ASP.NET CORE",Value="3"},
                new SelectListItem{Text="Azure",Value="4"}
            })
        </div>
    </div>
    @using (Html.BeginForm("index", "inicio", FormMethod.Post))
    {
        <div class="text-center">
            <button type="button" class="btn btn-success col-sm-5">Enviar</button>
        </div>
    }
</form>